<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/total_payment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="#FFFFFF" >

    <TextView
        android:id="@+id/textOneDaySales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+string/title_oneday_total_sales"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
         />
    
    <TextView
        android:id="@+id/oneDaySales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+string/title_total_payment"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="20sp"
         />

    <TextView
        android:id="@+id/textOneDayRevenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+string/title_oneday_total_revenue"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
         />
    
    <TextView
        android:id="@+id/oneDayRevenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="50sp" />

</LinearLayout>